<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--메뉴바-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/social"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_social"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--메뉴바 경계선-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@+id/menu_bar"
        android:background="@color/gray"/>

    <!--이미지 스크롤과 버튼-->
    <HorizontalScrollView
        android:id="@+id/menu_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn1"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="100dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/mapImage"
                android:scaleType="fitXY"
                android:src="@drawable/main_map"
                app:srcCompat="@drawable/main_map" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="38dp"
                android:layout_marginTop="67dp"
                android:background="@drawable/ic_marker" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="81dp"
                android:layout_marginTop="135dp"
                android:background="@drawable/ic_marker" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="132dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_marker" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="178dp"
                android:layout_marginTop="66dp"
                android:background="@drawable/ic_marker" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="138dp"
                android:layout_marginTop="122dp"
                android:background="@drawable/ic_marker" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="165dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/ic_marker" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="277dp"
                android:layout_marginTop="160dp"
                android:background="@drawable/ic_marker" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="294dp"
                android:layout_marginTop="272dp"
                android:background="@drawable/ic_marker" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="363dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/ic_marker" />

            <Button
                android:id="@+id/btn10"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="420dp"
                android:layout_marginTop="112dp"
                android:background="@drawable/ic_marker" />

            <Button
                android:id="@+id/btn11"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="487dp"
                android:layout_marginTop="207dp"
                android:background="@drawable/ic_marker" />

            <Button
                android:id="@+id/btn12"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="522dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/ic_marker" />

        </RelativeLayout>

    </HorizontalScrollView>

</LinearLayout>